{
  "build": {
    "base": {
      "node": "20.18.3",
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=4096",
        "YARN_ENABLE_IMMUTABLE_INSTALLS": "true"
      }
    },
    "production": {
      "extends": "base",
      "credentialsSource": "remote"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "withoutCredentials": true
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "credentialsSource": "remote"
    }
  }
}
