{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@navigation/*": ["navigation/*"],
      "@styles/*": ["styles/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": [
    "src",
    "**/*.tsx",
    "declarations.d.ts",
    "react-native-xml2js.d.ts"
  ]
}
